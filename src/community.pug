include includes/header

// Navbar
body
  include includes/navbar

  include mixin/mail_form

  .p-page.p-page-community
    main.l-main
      .p-cover-header.p-cover-header--community.js-cover-header
        h2.p-cover-header__title COMMUNITY

      .container-fluid
        .p-block.p-block--xs.u-pb-0
          .p-title.p-title--center 
            h3.p-title__header 
              | #{community.header.body_line_1}
              br.u-sp-only
              | #{community.header.body_line_2}
            p.p-title__body #{community.body}
        .p-block.u-pt-0
          .p-community-cards
            include mixin/community_card
            a(href=sns_url.twitter, target="_blank").p-community-card.p-community-card--twitter
              +community_card(
              community.twitter.name, 
              community.twitter.body_line_1,
              community.twitter.body_line_2,
              community.twitter.body_line_3)  
            a(href=sns_url.medium, target="_blank").p-community-card.p-community-card--medium
              +community_card(
              community.medium.name, 
              community.medium.body_line_1,
              community.medium.body_line_2,
              community.medium.body_line_3)
            a(href=sns_url.discord, target="_blank").p-community-card.p-community-card--discord
              +community_card(
              community.discord.name, 
              community.discord.body_line_1,
              community.discord.body_line_2,
              community.discord.body_line_3)
            a(href=sns_url.reddit, target="_blank").p-community-card.p-community-card--reddit
              +community_card(
              community.reddit.name, 
              community.reddit.body_line_1,
              community.reddit.body_line_2,
              community.reddit.body_line_3)
            a(href=sns_url.github, target="_blank").p-community-card.p-community-card--github
              +community_card(
              community.github.name, 
              community.github.body_line_1,
              community.github.body_line_2,
              community.github.body_line_3)

        .p-block.p-block--xs
          .p-title.p-title--center 
            h3.p-title__header
              |
              span #{ambassador_program.header_line_1}
              span #{ambassador_program.header_line_2}
            p.p-title__body #{ambassador_program.body}
          .text-center
            .p-product__btns
              a.p-product__button(href=ambassador_program.url, target="_blank") #{ambassador_program.btn_text}


  // Footer
  #meetus
  include includes/footer

  // generated by webpack
  script(type="text/javascript", src='/js/low_priority_index.js')
